{
  "name": "react-spotify-embed",
  "description": "A simple React component for embedding a Spotify song or album preview.",
  "version": "2.1.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ctjlewis/react-spotify-embed"
  },
  "type": "module",
  "platform": "browser",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js",
    "./*": "./dist/components/*/index.js",
    "./styles": "./dist/bundle.css",
    "./styles/*": "./dist/components/*/index.css"
  },
  "types": "dist/index.d.ts",
  "style": "dist/bundle.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "export": "bun types && bun build src/index.ts --production --outdir dist",
    "dev": "next dev",
    "build": "bun export && next build",
    "start": "next start",
    "lint": "next lint --fix",
    "types": "bun tsc src/index.ts -d --emitDeclarationOnly --outDir dist --jsx react-jsx",
    "pretest": "bun run build",
    "prepublishOnly": "bun run export"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.6",
    "@types/bun": "latest",
    "@types/node": "^18.19.130",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.21",
    "ava": "^5.3.1",
    "cssnano": "^5.1.15",
    "eslint": "^8.57.1",
    "eslint-config-next": "^13.5.11",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^8.0.3",
    "jest-environment-jsdom": "^29.7.0",
    "next": "^15.5.5",
    "postcss": "^8.5.6",
    "postcss-import": "^15.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "undici-types": "^7.16.0"
  },
  "keywords": [
    "react",
    "spotify",
    "embed",
    "nextjs"
  ],
  "engines": {
    "node": ">=14"
  }
}