{
  "name": "react-spotify-embed",
  "description": "A simple React component for embedding a Spotify song or album preview.",
  "version": "2.0.3",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ctjlewis/react-spotify-embed"
  },
  "type": "module",
  "platform": "browser",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": "./dist/index.js",
    "./*": "./dist/components/*/index.js",
    "./styles": "./dist/bundle.css",
    "./styles/*": "./dist/components/*/index.css"
  },
  "types": "dist/index.d.ts",
  "style": "dist/bundle.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "export": "tsmodule build",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "pretest": "yarn build",
    "test": "ava",
    "prepublishOnly": "yarn test && yarn export"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@tsmodule/react": "^12.0.0",
    "@tsmodule/tsmodule": "^41.41.0",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.52.0",
    "autoprefixer": "^10.4.13",
    "ava": "^5.2.0",
    "cssnano": "^5.1.15",
    "eslint": "^8.0.1",
    "eslint-config-next": "^13.1.6",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "jest-environment-jsdom": "^29.4.3",
    "next": "^13.1.6",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "react",
    "spotify",
    "embed",
    "nextjs"
  ],
  "engines": {
    "node": ">=14"
  }
}
